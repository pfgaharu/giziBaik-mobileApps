                    android:layout_below="@+id/kalimat17"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Alamat"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/kalimat19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/kalimat18"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="10dp"
                    android:text="Jalan Budi Mulia Raya No.2 RT 15 / RW 11, Pademangan Barat, Pademangan, Kota Jakarta Utara, Daerah Khusus Ibukota Jakarta 14420"
                    android:textColor="@color/colorPrimaryDark"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/kalimat20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/kalimat19"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="No Telepon"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/kalimat21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/kalimat20"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="10dp"
                    android:text="021 6452346"
                    android:textColor="@color/colorPrimaryDark"
                    android:typeface="sans" />

                <ImageView
                    android:id="@+id/alamatGMaps"
                    android:layout_width="380dp"
                    android:layout_height="190dp"
                    android:layout_below="@+id/kalimat21"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="2dp"
                    android:onClick="launchalamatGMaps"
                    android:src="@drawable/gmaps"
                    />
            </RelativeLayout>
        </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <ImageView
        android:background="#3AB36E"
        android:id="@+id/footerbackgroud"
        android:layout_width="match_parent"
        android:layout_weight="0"
        android:layout_height="40dp"
        android:layout_below="@+id/scrollText1"
        android:layout_marginBottom="1dp"
        android:src="@drawable/backgroundappfooter" />


</LinearLayout>

