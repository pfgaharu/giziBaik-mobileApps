                    android:typeface="sans" />

                <TextView
                    android:id="@+id/kalimat11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/kalimat10"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="10dp"
                    android:text="kepuasan dan keselamatan pelanggan"
                    android:textColor="@color/colorPrimaryDark"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/kalimat12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/kalimat11"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="3. Menyediakan dan meningkatkan sarana prasarana"
                    android:textColor="@color/colorPrimaryDark"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/kalimat13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/kalimat12"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="10dp"
                    android:text="yang unggul"
                    android:textColor="@color/colorPrimaryDark"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/kalimat14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/kalimat13"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="4. Menciptakan lingkungan kerja yang"
                    android:textColor="@color/colorPrimaryDark"
