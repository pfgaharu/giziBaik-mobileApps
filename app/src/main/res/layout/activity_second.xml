<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context="intern.com.prant.intent.SecondActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundapp"
    tools:showIn="@layout/activity_second">

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:text="Yuk, Ketikkan Tinggi Badan Kamu"
        android:typeface="sans"
        android:id="@+id/textBBIdeal"
        android:layout_above="@+id/buttonHitung"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="65dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:text="Tinggi Badan (cm)"
        android:layout_marginLeft="10dp"
        android:typeface="sans"
        android:id="@+id/texttinggiBadan"
        android:layout_alignBottom="@+id/editTinggiBadan"
        android:layout_toStartOf="@+id/buttonHitung" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonHitung"
        android:layout_marginRight="126dp"
        android:layout_marginEnd="126dp"
        android:text="Hitung"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/editTinggiBadan"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/editTinggiBadan"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_alignParentTop="true"
        android:layout_marginTop="198dp"
        android:layout_toRightOf="@+id/texttinggiBadan"
        android:layout_toEndOf="@+id/texttinggiBadan" />

    <TextView android:text=""
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:layout_x="172dip"
        android:layout_below="@+id/buttonHitung"
        android:id="@+id/texthasilBBIdeal"
        android:layout_height="wrap_content"
        android:layout_y="232dip"></TextView>


</RelativeLayout>