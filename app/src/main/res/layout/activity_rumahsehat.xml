<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="intern.com.prant.intent.rumahSehatActivity">

    <ImageView
        android:id="@+id/headerbackgroud"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_weight="0"
        android:background="#3AB36E"
        android:src="@drawable/backgroundappheader" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">
        <ScrollView
            android:id="@+id/scrollText1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bodybackgroudd">

                <TextView
                    android:id="@+id/kalimat1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Sejarah"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/kalimat2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/kalimat1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Rumah Sakit Umum Daerah (RSUD) Pademangan yang tergolong RSUD Kelas D ini, mulai bergerak pada tanggal 6 Maret 2015 yang sebelumnya merupakan Puskesmas Kecamatan Pademangan. Perubahan itu berdasarkan peraturan Gurbernur Provinsi DKI Jakarta No. 1024/2014 tentang perubahan fungsi Puskesmas Kecamatan menjadi Rumah Sakit Umum Kecamatan. "
                    android:textColor="@color/colorPrimaryDark"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/kalimat3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/kalimat2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Perubahan status tersebut dilakukan dengan tujuan meningkatkan pelayanan kesehatan kepada masyarakat sehingga tidak ada lagi penumpukan pasien di RS tipe B dan A. Berdasarkan pergub 1024/2014 Peningkatan Puskesmas Kecamatan Rawat Inap menjadi Rumah Sakit Umum Kecamatan dan kemudian Pergub No. /2016 menjadi RSUD Kelas D"
                    android:textColor="@color/colorPrimaryDark"
                    android:typeface="sans" />


                <TextView
                    android:id="@+id/kalimat5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/kalimat3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Visi dan Misi"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/kalimat6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/kalimat5"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Visi:  Menjadi rumah sakit terdepan di DKI Jakarta"
